				<referencedClass name="OCA\OIDCIdentityProvider\Db\Client" />
				<referencedClass name="OCA\OIDCIdentityProvider\Db\CustomClaimMapper" />
				<referencedClass name="OCA\OIDCIdentityProvider\Db\ClientMapper" />
